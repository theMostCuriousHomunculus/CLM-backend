{
  "env": {
    "es2021": true
  },
  "extends": "strongloop",
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module"
  },
  "rules": {
    "comma-dangle": "off",
    "max-len": [
      "error",
      {
        "ignoreComments": true,
        "ignoreUrls": true,
        "ignoreStrings": true,
        "ignoreTemplateLiterals": true
      }
    ],
    "radix": ["error", "as-needed"],
    "space-before-function-paren": "off"
  }
}
